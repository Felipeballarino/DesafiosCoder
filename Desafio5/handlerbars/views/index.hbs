<div class="container" style="width: 500px">
  <h1>Formulario Handlerbars</h1>
  <form action="/" method="post" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="exampleInputName" class="form-label">Nombre</label>
      <input
        type="text"
        class="form-control"
        id="exampleInputName"
        name="nombre"
      />
    </div>
    <div class="mb-3">
      <label for="exampleInputEdad" class="form-label">Precio</label>
      <input
        type="number"
        class="form-control"
        id="exampleInputEdad"
        name="precio"
      />
    </div>
    <div class="mb-3">
      <label for="exampleInputApellido" class="form-label">Foto</label>
      <input
        type="file"
        class="form-control"
        id="exampleInputApellido"
        name="foto"
      />
    </div>
    <button type="submit" class="btn btn-primary">Agregar</button>
  </form>

  <a href="/productos">Ver listado de productos</a>
</div>